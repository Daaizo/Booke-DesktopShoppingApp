              minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#payOrderButtonClicked"
              prefHeight="50.0" prefWidth="350.0" styleClass="OrangeButtons" text="Pay now"/>
      <Label id="titleLabel" layoutX="296.0" layoutY="-12.0" prefHeight="52.0" prefWidth="278.0"
             style="-fx-font-size: 45;" text="Order details"/>
      <Label id="informationLabel" fx:id="informationLabel" layoutX="459.0" layoutY="63.0" prefHeight="43.0"
