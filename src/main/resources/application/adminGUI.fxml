<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
            fx:controller="application.Controllers.AdminController">
    <children>
        <TabPane layoutX="1.0" layoutY="1.0" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE"
                 AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="-1.0"
                 AnchorPane.topAnchor="1.0">
            <tabs>
                <Tab text="All users">
                    <content>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <TableView fx:id="userTableView" layoutY="6.0" prefHeight="371.0" prefWidth="600.0"
                                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="userIDColumn" prefWidth="64.0" text="ID"/>
                                        <TableColumn fx:id="userLoginColumn" prefWidth="103.0" text="Login"/>
                                        <TableColumn fx:id="userLastNameColumn" prefWidth="234.0" text="Last Name"/>
                                        <TableColumn fx:id="userFirstNameColumn" prefWidth="198.0" text="First Name"/>
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="All products">
                    <content>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
        <Button fx:id="btnLogout" layoutX="530.0" layoutY="363.0" mnemonicParsing="false"
                onAction="#logoutButtonClicked" prefHeight="25.0" prefWidth="70.0" text="Logout"
                AnchorPane.rightAnchor="2.0" AnchorPane.topAnchor="2.0"/>
    </children>
</AnchorPane>
